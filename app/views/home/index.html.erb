<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>タップル風UI</title>
<style>
body {
font-family: Arial, sans-serif;
background-color: #f5f5f5;
margin: 0;
padding: 0;
}

.profile-card {
margin: 20px;
background-color: #ffffff;
border-radius: 12px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
overflow: hidden;
text-align: center;
}

.profile-slideshow {
position: relative;
width: 100%;
height: 580px;
}

.profile-image {
display: none;
width: 100%;
height: 100%;
object-fit: cover;
}

.profile-image.active {
display: block;
}

.profile-info {
padding: 15px;
}

.profile-info h3 {
margin: 0;
font-size: 24px;
}

.profile-info p {
color: #888;
font-size: 16px;
margin: 5px 0;
}

.action-buttons {
display: flex;
justify-content: space-around;
padding: 10px 0;
}

.action-buttons button {
background-color: #ff5a5f;
color: #ffffff;
border: none;
border-radius: 50%;
width: 50px;
height: 50px;
font-size: 24px;
cursor: pointer;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.button-dislike {
background-color: #ccc; /* バツボタンの色 */
}

.button-superlike {
background-color: #4ab3f4; /* スーパーイイねボタンの色 */
}

.footer-nav {
display: flex;
justify-content: space-around;
padding: 10px 0;
background-color: #ffffff;
position: fixed;
bottom: 0;
width: 100%;
border-top: 1px solid #ddd;
}

.footer-nav img {
width: 24px;
height: 24px;
}
</style>
</head>
<body>

<div class="profile-card">
    <div class="profile-slideshow">
        <img src="./img/Skype_Picture_2024_10_31T03_18_57_714Z.jpeg" alt="Profile Image 1" class="profile-image active">
        <img src="./img/Skype_Picture_2024_10_31T03_19_10_776Z.jpeg" alt="Profile Image 2" class="profile-image">
        <img src="./img/Skype_Picture_2024_10_31T03_19_16_921Z.jpeg" alt="Profile Image 3" class="profile-image">
    </div>
    <div class="profile-info">
        <h3>こだまっち</h3>
        <p>可愛かったらだれでもOK！</p>
    </div>
    <div class="action-buttons">
        <button class="button-dislike" onclick="dislikeProfile()">&#10006;</button> <!-- バツボタン -->
        <button onclick="likeProfile()">&#10084;</button> <!-- ハートボタン -->
        <button class="button-superlike" onclick="superlikeProfile()">&#9733;</button> <!-- スーパーイイねボタン -->
    </div>
</div>

<div class="footer-nav">
<img src="home-icon.png" alt="ホーム">
<img src="search-icon.png" alt="さがす">
<img src="heart-icon.png" alt="おでかけ">
<img src="message-icon.png" alt="やりとり">
<img src="profile-icon.png" alt="マイページ">
</div>

<script>
// スライドショー用スクリプト
let currentIndex = 0;
const images = document.querySelectorAll('.profile-image');
const imageCount = images.length;

function showNextImage() {
images[currentIndex].classList.remove('active');
currentIndex = (currentIndex + 1) % imageCount;
images[currentIndex].classList.add('active');
}

// 3秒ごとに次の画像を表示
setInterval(showNextImage, 3000);

// ボタンアクション
function likeProfile() {
alert("いいねしました！");
}

function dislikeProfile() {
alert("スキップしました！");
}

function superlikeProfile() {
alert("スーパーイイねしました！");
}
</script>

</body>
</html>